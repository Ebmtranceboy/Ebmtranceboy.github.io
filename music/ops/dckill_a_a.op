opcode dckill,a,a
  ain xin
  setksmps 1
  iN = 1001
  anum init 0
  asumy init 0

  iesp = (iN+1)/2
  ivar = (iN^2-1)/12

  adel delay ain, iN/sr

  anum = anum + iesp*adel + (iN-iesp)*ain - asumy
  asumy = asumy - adel + ain

  am = anum / iN / ivar
  ap = asumy/iN - am*iesp

  xout ain-(am*iN+ap)
endop